    "version": "0.2.0",
    "configurations": [
    {
        "name": "Run android on device|emulator",
        "type": "cordova",
        "request": "launch",
        "platform": "android",
        "target": "device|emulator",
        "sourceMaps": true,
        "cwd": "${workspaceFolder}"
    },
        {
            "name": "Launch via npm",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "debug"
            ],
            "port": 9229
        },
      
    ]
}